<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>
  
  <!-- We log only at info level to avoid "false positive" test code coverage
       due to debug logging. In the case of test failures it is useful to turn
       this up to debug. -->
  <logger name="gov.va.med.srcalc" level="debug"/>
  
  <!-- Show Hibernate-generated SQL. -->
  <logger name="org.hibernate.SQL" level="debug" />

  <root level="info">
    <appender-ref ref="console" />
  </root>
</configuration>
